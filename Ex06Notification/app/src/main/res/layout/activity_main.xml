<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/activity_main_button_toast"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Show Toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_main_button_snackbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Snackbar"
        app:layout_constraintEnd_toEndOf="@+id/activity_main_button_toast"
        app:layout_constraintStart_toStartOf="@+id/activity_main_button_toast"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button_toast" />

    <Button
        android:id="@+id/activity_main_button_vibration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Vibrate"
        app:layout_constraintEnd_toEndOf="@+id/activity_main_button_snackbar"
        app:layout_constraintStart_toStartOf="@+id/activity_main_button_snackbar"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button_snackbar" />

    <Button
        android:id="@+id/activity_main_button_dialog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Dialog"
        app:layout_constraintEnd_toEndOf="@+id/activity_main_button_vibration"
        app:layout_constraintStart_toStartOf="@+id/activity_main_button_vibration"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button_vibration" />

    <Button
        android:id="@+id/activity_main_button_notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Show Notification"
        app:layout_constraintEnd_toEndOf="@+id/activity_main_button_dialog"
        app:layout_constraintStart_toStartOf="@+id/activity_main_button_dialog"
        app:layout_constraintTop_toBottomOf="@+id/activity_main_button_dialog" />

</androidx.constraintlayout.widget.ConstraintLayout>