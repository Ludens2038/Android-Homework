<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_activity_main_nick_tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Enter Nickname"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dialog_activity_main_nick_edittext_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="please enter nickname"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/dialog_activity_main_nick_tv_label"
        app:layout_constraintStart_toStartOf="@+id/dialog_activity_main_nick_tv_label"
        app:layout_constraintTop_toBottomOf="@+id/dialog_activity_main_nick_tv_label" />

</androidx.constraintlayout.widget.ConstraintLayout>