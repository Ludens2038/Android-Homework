<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/loginscreen_button_login"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="31dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <Button
        android:id="@+id/loginscreen_button_register"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="@+id/loginscreen_button_login"
        app:layout_constraintTop_toBottomOf="@+id/loginscreen_button_login" />

    <EditText
        android:id="@+id/loginscreen_field_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/loginscreen_clickabletext_forgotpassword"
        app:layout_constraintEnd_toEndOf="@+id/loginscreen_button_login" />

    <EditText
        android:id="@+id/loginscreen_field_userid"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:inputType="text"
        android:text="enter UserID"
        android:textColor="@color/material_dynamic_neutral50"
        app:layout_constraintBottom_toTopOf="@+id/loginscreen_field_password"
        app:layout_constraintEnd_toEndOf="@+id/loginscreen_button_login" />

    <TextView
        android:id="@+id/loginscreen_textview_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Password"
        app:layout_constraintBottom_toBottomOf="@+id/loginscreen_field_password"
        app:layout_constraintStart_toStartOf="@+id/loginscreen_button_login" />

    <TextView
        android:id="@+id/loginscreen_textview_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:text="UserID"
        app:layout_constraintBottom_toBottomOf="@+id/loginscreen_field_userid"
        app:layout_constraintStart_toStartOf="@+id/loginscreen_button_login" />

    <TextView
        android:id="@+id/loginscreen_clickabletext_forgotpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="10dp"
        android:text="forgot password?"
        android:textColor="@color/design_default_color_primary"
        app:layout_constraintBottom_toTopOf="@+id/loginscreen_button_login"
        app:layout_constraintEnd_toEndOf="@+id/loginscreen_button_login" />

</androidx.constraintlayout.widget.ConstraintLayout>